.my-bg {
  box-sizing: border-box;
  position: relative;
  height: 112px;
}
.my-bg .bg-img {
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: -1;
}
.my-bg .person-container {
  box-sizing: border-box;
  display: flex;
  align-items: center;
  height: 71px;
  padding: 25px 0 0 30px;
}
.person-container .person-avatar {
  width: 128rpx;
  height: 128rpx;
  background-color: #ccc;
  border-radius: 50%;
}
.person-container .person-msg {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  margin-left: 5px;
  font-size: 14px;
  color:#FFFFFF;
}
.person-msg .name {
  font-size: 20px;
  font-weight: bold;
}

.my-list {
  padding: 5px 20px 0 20px;
}

.my-list .list-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 40px;
  color: #9EA1A7;
}