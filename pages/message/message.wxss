.message-wrap .message-item {
  box-sizing: border-box;
  display: flex;
  width: 100%;
  height: 10vh;
}
.message-item .item-left {
  box-sizing: border-box;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 150rpx;
  padding: 28rpx;
}
.message-item .item-right {
  display: flex;
  justify-content: space-between;
  border-bottom: 1px solid  #f2f2f2;
  width: 100%;
  padding: 10px 0;
}
.item-left .portrait-wrap {
  position: relative;
  width: 100%;
  height: 0;
  padding-bottom: 100%;
  background-color: #ccc;
}
.portrait-wrap .red-num {
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  top: -10%;
  right: -10%;
  width: 40%;
  height: 40%;
  border-radius: 50%;
  background-color: #fa5151;
  font-size: 12px;
  color: #fff;
  z-index: 99;
}
.item-left .portrait {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: #ccc;
}
.item-right .message-main {
  display: flex;
  flex-direction: column;
  justify-content: center;
  flex: 5;
}
.message-main .message-title {
  font-size: 17px;
}
.message-main .message-detail {
  font-size: 14px;
  color: #c6c6c6;
}
.item-right .message-date {
  flex: 1;
  display: flex;
  justify-content: center;
  font-size: 12px;
  color:#c6c6c6;
}