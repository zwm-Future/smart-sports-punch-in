<view class="operation-container">
  <!-- <view class="refresh">刷新</view> -->
  <view class="pause-btn-wrap" hidden="{{mode != 0}}">
    <pause-btn bindhandlePause="handlePause"></pause-btn>
  </view>
  <view class="continue-btn-wrap" hidden="{{mode != 1}}">
    <continue-btn bindhandleContinue="handleContinue"></continue-btn>
  </view>
  <view class="end-btn-wrap" hidden="{{mode != 1}}">
    <end-btn bindhandleContinue="handleContinue"></end-btn>
  </view>
  <picker range="{{}}"></picker>
</view>