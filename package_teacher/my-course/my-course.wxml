<view class="my-course-wrap">
  <semester-picker bindsemesterPickChange="turnSemester"></semester-picker>
  <view class="my-course-main" bindlongpress="handleLongPress">
    <navigator url="../my-student/my-student?courseId={{item.id}}&name={{item.name}}" wx:for="{{courseList}}" wx:key="id" class="course-item" data-id="{{item.id}}">
      {{item.name}}
    </navigator>
  </view>
</view>
<view class="btn-container">
  <button class="add-btn" bindtap="showAddModal">+</button>
</view>
<show-modal modalVisible="{{addModal}}">
  <view class="add-main">
    <form bindsubmit="handleAdd">
      <view class="add-form">
        <semester-picker bindsemesterPickChange="addTurnSemester"></semester-picker>
        <view class="ipt-container">
          <text>课程名称：</text> <input name="name" class="add-ipt" type="text" />
        </view>
      </view>
      <view class="bottom-btn">
      <button formType="submit" class="confirm-btn btn">确定</button>
      <button class="cancle-btn btn" bindtap="handleCancle">取消</button>
    </view>
    </form>
  </view>
</show-modal>