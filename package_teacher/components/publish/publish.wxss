.course-wrap {
  border-radius: 40rpx;
  overflow: hidden;
}

.course-header {
  width: 100%;
  padding: 15rpx 0;
  text-align: center;
  color: #fff;
  background-color: #44CAAC;
  border-bottom: 2rpx solid #ccc;
}

.course-container {
  width: 100%;
  height: 35vh;
  overflow: scroll;
}

.checkbox-group {
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  width: 100%;
  padding: 10rpx 20rpx;
  padding-top: 0;
}
.select-all {
  box-sizing: border-box;
  width: 100%;
  padding: 10rpx 20rpx;
  padding-bottom: 0;
}

.course-footer {
  width: 100%;
  display: flex;
  margin-top: 10rpx;
}

.btn {
  flex: 1;
  font-size: 36rpx;
  margin: 0;
  padding: 0;
  border-radius: 0;
}

.confirm {
  background-color: #44CAAC;
  color: #fff;
}
.confirm.click-class {
  opacity: .7;
}
