<view class="today-done-wrap">
  <view class="today-done">
    <view class="done-title">
      <text class="tip-text">今日已打卡</text>
      <navigator url="/pages/record/record" class="detail-text">详细信息＞</navigator>
    </view>
    <view class="done-main">
      <view class="done-time">
        <text class="num">{{sportTime}}</text>
        <text class="unit">min</text>
      </view>
      <view class="done-points">
        <text class="num">{{score}}</text>
        <text class="unit">积分</text>
      </view>
    </view>
  </view>
</view>