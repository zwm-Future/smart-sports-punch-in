.title  {
  padding-bottom: 20rpx;
  text-align: center;
  font-size: 16px;
  font-weight:bolder;
  color:#00B386;
  border-bottom: 2rpx solid #f5f5f5;
}

.desc {
  font-size: 14px;
  font-weight: bold;
}
.text-index {
  text-indent: 1.5rem;
  margin: 20rpx 0;
}

.footer {
  display: flex;
  justify-content: space-between;
}

.btn {
  flex: 1;
  margin: 0;
  border-radius: 20rpx;
}

.btn:after {
  content: none;
}

/* 去掉边框 */
.btn::after {
  border: none;
}

.logout-btn {
  color:#fff;
  background-color: #e33c64;
  margin-right: 25rpx !important;
}

.auth-btn {
  color:#fff;
  background-color: #44caac;
}