.card {
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
  background: linear-gradient(to left,#44caac,#44c2ca);
  box-shadow: 0 0 20rpx 10rpx  #efeff1;
}

.card .card-main{
  display: flex;
  justify-content: space-around;
  align-items: center;
  /* height: 63%; */
  height: 100%;
}
.card-main .main-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  color:#fff;
}
.main-item .text {
  font-size: 28rpx;
  font-weight: 600;
}
.main-item .num {
  font-size: 72rpx;
  font-weight: bolder;
}
.card .card-foot {
  box-sizing: border-box;
  width: 100%;
  height: 37%;
  padding: 40rpx 50rpx; 
  background-color: #fff;
  border-radius: 0 0 20rpx 20rpx;
}
.card-foot .text {
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  font-weight:600;
  margin-bottom: 12rpx;
}
.text .progress-text {
  color:#9EA1A7;
}
.text .num {
  color:#233249;
}