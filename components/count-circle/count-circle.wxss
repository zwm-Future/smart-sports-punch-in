.count-main {
  box-sizing: border-box;
  position: relative;
  display: flex;
  align-items: center;
  flex-direction: column;
  padding: 0 5%;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, .5);
}

.count-main .title {
  position: absolute;
  top: 15%;
  font-size: 30rpx;
  color: #9EA1A7;
}

.count-main .count-time {
  box-sizing: border-box;
  position: absolute;
  top: 50%;
  width: 99%;
  font-family: Helvetica Neue, Consolas, Monaco, monospace;
  font-size: 80rpx;
  font-weight: 700;
  color: #233249;
  text-align: center;
  overflow: scroll;
  transform: translateY(-40%);
}

/* 修改vant-circle内置样式 */
.van-circle__canvas {
  z-index: 1;
}