.show-modal-wrap {
  position: fixed;
  left: 0;
  top: 0;
  z-index: 99999;
  width: 100vw;
  height: 100vh;
  overflow: hidden;
}

.mask {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1;
  width: 100%;
  height: 100%;
  background: #000;
  opacity: 0;
  transition: 0.2s;
}

.mask-show {
  opacity: 0.4;
}

.logout-icon-wrap {
  padding-bottom: 100%;
  height: 0;
  position: relative;
}

.logout-icon {
  position: absolute;
  top: 6vh;
  right: -15vw;
  width: 100%;
  min-height: 100%;
  background-color: transparent;
  transform: rotate(-20deg);
}